{
    "env": {
        "node": true,
        "es6": true
    },
    "globals": {
        "window": false,
        "document": false,
        "console": false,

        "it": false,
        "before": false,
        "describe": false,
        "beforeEach": false,
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "camelcase": 0,
        "no-bitwise": 2,
        "curly": 2,
        "eqeqeq": 2,
        "wrap-iife": 2,
        "indent": [2, 4, {"SwitchCase": 1}],
        "no-use-before-define": 2,
        "new-cap": 2,
        "no-caller": 2,
        "quotes": [2, "single"],
        "no-undef": 2,
        "no-unused-vars": 2,
        "strict": [2, "global"],
        "semi": [2, "always", {"omitLastInOneLineBlock": true}],
        "require-yield": 2,
        "max-len": [2, 120],
        "linebreak-style": [2, "unix"],
        "no-with": 2,
        "array-bracket-spacing": 0,
        "no-implicit-coercion": [2, {"string": true}],
        "consistent-this": [2, "self"]
    }
}
